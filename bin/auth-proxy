#!/usr/bin/env node

// Include the main application.
var proxy = require('../lib/server.js');
var logger = proxy.logger;

// TODO: Setup a better way to configure this.
require('../lib/plugins/GoogleOAuth2').attach(proxy.passport, proxy.app, proxy.config);


// If a confg file exists, override the defaults with values
// from that file.
var confPath = path.join(__dirname, '..', 'config.json');

proxy.configure(confPath, function() {
  proxy.start();
});

var shutdownHandler = function() {
  logger.info('Stop signal received, shutting down.');
  process.removeListener('SIGINT', shutdownHandler);
  process.on('SIGINT', function() {
    logger.error('Forcing shutdown without completing graceful shutdown.');
    process.exit(1);
  });
  proxy.stop(function() {
    logger.info('Graceful shutdown complete.');
    process.exit(0);
  });
  setTimeout(function() {
    logger.error('Graceful shutdown timed out.');
    process.exit(1);
  }, 500);
};
process.on('SIGINT', shutdownHandler);

process.on('SIGHUP', function() {
  logger.error('No handler is setup for SIGHUP at this time');
  process.exit(1);
});
